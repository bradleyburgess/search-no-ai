---
import ThemeToggler from "./ThemeToggler.vue";

const links = [
  { text: "Why", to: "#why" },
  { text: "How", to: "#how" },
  { text: "NB", to: "#nb" },
];
---

<header class="px-4 py-2 xl:px-6 xl:py-4 absolute w-full">
  <div class="flex justify-end items-center gap-2">
    <nav>
      <ul class="flex gap-4">
        {
          links.map((link) => (
            <a href={link.to} class="hover:underline">
              {link.text}
            </a>
          ))
        }
      </ul>
    </nav>
    <ThemeToggler client:load />
  </div>
</header>
